    <div class="col-md-8 d-flex align-items-center" style="padding: 50px 25px 0px 25px;">
        <img src="/images/login-banner.png" style="max-height: 100%; max-width: 100%;"/>
    </div>
    <div class="col-md-4 col-md-offset-2" style="padding-top: 25px;">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center my-4">Create a new account</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating my-4">
                <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.UserName"></label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating my-4">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating my-4">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating my-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success my-1">Register</button>
            </div>
            <div class="text-center">
                <p class="m-0">or</p>
            </div>
            <div>
                <a asp-page="./Login" class="w-100 btn btn-lg btn-primary my-1">Log in</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
