@page
@model RAZOR_EF.Areas.Admin.User.AddRoleModel

@{
    ViewData["Title"] = "Update role";
}
<h3>@ViewData["Title"]</h3>
<hr />
<div>
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Roles)
            </dt>
            <dd class="col-sm-6">
                @Html.ListBoxFor(model => model.Roles, @Model.AllRoles, new {
                    id = "id-select-roles", @class = "w-100"})
            </dd>
        </dl>
        <a class="btn btn-outline-secondary" asp-page="./Index">@("< Back")</a>
        <input type="submit" value="Save" class="btn btn-primary mx-2" />
    </form>
</div>

@section Scripts {
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css">
    <script>
        $("#id-select-roles").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        })
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
